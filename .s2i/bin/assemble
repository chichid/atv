#!/bin/bash
echo "Downloading ffmpeg..."
wget -q https://johnvansickle.com/ffmpeg/releases/ffmpeg-release-amd64-static.tar.xz -O ffmpeg.tar.xz

echo "Unpacking ffmpeg..."
mkdir tmp 
tar -C tmp -xf ffmpeg.tar.xz
mkdir $HOME/bin
mv tmp/**/ffmpeg $HOME/bin
mv tmp/**/ffprobe $HOME/bin 
rm ffmpeg.tar.xz
rm -rf tmp

echo "Running the assemble script"
/usr/libexec/s2i/assemble
rc=$?
exit $rc
