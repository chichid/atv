<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
    <script src="{{config.BaseUrl}}/assets/js/utils.js" />
  </head>
  <body>
    <scroller id="mainScroller">
      <items>
        <!-- movie list -->
        <grid id="tvGrid">
          <items>
            {{#each Channels }}
            <moviePoster id="{{name}}" onSelect="playVideo('{{url}}')">
              <title>{{name}}</title>
              <image>{{logo}}</image>
              <defaultImage>resource://Poster.png</defaultImage>
            </moviePoster>
            {{/each}}
          </items>
        </grid>
      </items>
    </scroller>
  </body>
</atv>
