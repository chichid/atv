<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
    <script src="{{config.BaseUrl}}/assets/js/utils.js" />
  </head>
  <body>
    {{#if epgPrograms.[0]}}
    <listScrollerSplit id="com.sample.list-scroller-split">
      <header>
        <simpleHeader accessibilityLabel="Movie list">
          <title>{{ query.epgChannel }} </title>
        </simpleHeader>
      </header>
      <menu>
        <sections>
          <menuSection>
						<items>
              {{#each epgPrograms}}
              <twoLineMenuItem id="list_{{programTitle}}" accessibilityLabel="Recent items" onSelect="playVideo('{{streamURL}}')">
                <label>{{programTitle}}</label>
                <label2>{{start}}</label2>
                <rightLabel></rightLabel>
								<preview>
									<keyedPreview>
                    <title>{{programTitle}}</title>
										<rightLabel>{{start}}-{{end}}</rightLabel>
										<rating></rating>
                    <summary>{{programSummary}}</summary>
                    <image></image>
									</keyedPreview>
								</preview>
							</twoLineMenuItem>
              {{/each}}
						</items>
          </menuSection>
        </sections>
      </menu>
    </listScrollerSplit>
    {{else}}
    <dialog id="com.sample.error-dialog">
      <title>Non Disponible</title>
      <description>Cette Option n'est pas disponible pour ce canal.</description>
    </dialog>
    {{/if}}
  </body>
</atv>
