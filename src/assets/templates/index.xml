<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
    <script src="{{config.BaseUrl}}/assets/js/utils.js" />
  </head>
  <body>
    <scroller id="mainScroller">
      <items>
        {{#each groups}}
        <collectionDivider alignment="left" accessibilityLabel="{{groupName}}">
          <title>{{groupName}}</title>
        </collectionDivider>

        <shelf id="channelsShelf">
          <sections>
            <shelfSection>
              <items>
                {{#each channels }}
                <sixteenByNinePoster id="{{name}}" alwaysShowTitles="true" onSelect="playVideo('{{url}}')">
                  <title>{{name}}</title>
                  <image src720="{{logo}}" src1080="{{logo}}" />
                  <defaultImage>resource://16x9.png</defaultImage>
                </sixteenByNinePoster>
                {{/each}}
              </items>
            </shelfSection>
          </sections>
        </shelf>
        {{/each}}
      </items>
    </scroller>
  </body>
</atv>
