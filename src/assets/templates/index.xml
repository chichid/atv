<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
    <script src="{{config.BaseUrl}}/assets/js/utils.js" />
  </head>
  <body>
    <scroller id="mainScroller">
      <items>
        {{#each groups}}
        <collectionDivider alignment="left" accessibilityLabel="{{groupName}}">
          <title>{{groupName}}</title>
        </collectionDivider>

        <grid id="channelsGrid-{{groupName}}" columnCount="10">
          <items>
            {{#each channels }}
            <fourByThreePoster id="{{name}}" alwaysShowTitles="true" onSelect="playVideo('{{url}}')">
              <title>{{name}}</title>
              <image src720="{{logo}}" src1080="{{logo}}" />
              <defaultImage>resource://4x3.png</defaultImage>
            </fourByThreePoster>
            {{/each}}
          </items>
        </grid>
        {{/each}}
      </items>
    </scroller>
  </body>
</atv>
