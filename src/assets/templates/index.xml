<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
    <script src="{{config.BaseUrl}}/assets/js/utils.js" />
  </head>
  <body>
    <scroller id="mainScroller">
      <items>
        {{#each groups}}
        <collectionDivider alignment="left" accessibilityLabel="{{groupName}}">
          <title>{{groupName}}</title>
        </collectionDivider>

        <grid id="channelsGrid-{{groupName}}" columnCount="7">
          <items>
            {{#each channels}}
            <sixteenByNinePoster id="{{channelName}}" alwaysShowTitles="false" onSelect="playVideo('{{url}}')">
              <title>{{channelName}}</title>
              <image src720="{{logoURL}}" src1080="{{logoURL}}" />
              <defaultImage>resource://16x9.png</defaultImage>
            </sixteenByNinePoster>
            {{/each}}
          </items>
        </grid>
        {{/each}}
      </items>
    </scroller>
  </body>
</atv>
